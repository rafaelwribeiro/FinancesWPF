<Page x:Class="FinancesWPF.Views.CategoryFormPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:FinancesWPF.Views"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="CategoryFormPage">

    <Grid MaxWidth="500">
        <StackPanel>
            <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Center">
                <TextBlock Text="Categorias" FontWeight="Bold" FontSize="20"/>
            </StackPanel>

            <StackPanel Grid.Row="2" Orientation="Vertical" Margin="20">
                <TextBlock Text="Nome" FontWeight="Bold"/>
                <TextBox x:Name="txtName" Text="{Binding Name}" />
            </StackPanel>

            <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right" Margin="20">
                <Button Content="Cancelar" Width="85" Click="Cancel_Click"/>
                <Button Content="Gravar" Width="85" Click="Button_Click"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>
