<Page x:Class="FinancesWPF.Views.CategoryPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:data="http://schemas.microsoft.com/wpf/2008/toolkit"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"      
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:FinancesWPF.Views"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="CategoryPage">

    <Grid>
        <StackPanel>
            <TextBlock Text="Categorias" FontSize="20" Margin="10" Width="144"/>
            
            <StackPanel>
                <TextBox  />
                <Button Content="Adicionar" Width="183" Click="Button_Click"/>
            </StackPanel>
            
            <Separator />
            
            <DataGrid
                x:Name="dataGrid" 
                AutoGenerateColumns="False"
                IsReadOnly="True"
                Width="800"
                Height="400"
            >
                <DataGrid.Columns>
                    <DataGridTextColumn Header="ID" Binding="{Binding Id}" />
                    <DataGridTextColumn Header="Nome" Binding="{Binding Name}" />
                </DataGrid.Columns>
            </DataGrid>

        </StackPanel>
    </Grid>
</Page>
